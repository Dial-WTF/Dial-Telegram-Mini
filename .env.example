ENV=local

### CORE APP
PUBLIC_BASE_URL=            # e.g. https://dial.ngrok.app (no trailing slash)
NEXT_PUBLIC_ONRAMP=COINBASE # COINBASE or MOONPAY
PAYEE_ADDR=                 # default on-chain recipient (0x...)
PAYEE_ENS=                  # optional ENS for docs/reference

### TELEGRAM BOT
BOT_TOKEN=
BOT_USERNAME=               # e.g. AlphaDialBot (no @)
PUBLIC_API_KEY_TELEGRAM=    # API key for dial.wtf party line integration

### DEBUG / DEV
DEBUG_BOT=                  # 1 to log bot events
BOT_DRY_RUN=                # 1 to avoid calling Telegram API / sending
DEBUG_REQUEST=              # 1 to log Request payloads/responses
ALLOW_UNVERIFIED_INITDATA=  # 1 to bypass TG initData check in dev only

### FEES
FEE_BPS=50                  # 50 = 0.50%
FEE_ADDRESS=                # fee recipient (0x...)

### REQUEST NETWORK
REQUEST_API_KEY=            # server-side API key
REQUEST_REST_BASE=https://api.request.network  # base; code appends /v2/request
REQUEST_WEBHOOK_SECRET=     # used by /api/request-webhook
REQUEST_NODE_URL=https://main.gateway.request.network
REQUEST_CHAIN=base          # used by SDK path; base|mainnet|polygon etc.
ERC20_TOKEN_ADDRESS=        # optional; overrides default Base USDC for SDK path

### RESOLUTION / RPC
RPC_URL=                    # mainnet RPC for ENS resolution (https://...)

### ETH PAYMENT URI (optional but recommended for wallet-pay QR)
ETH_FEE_PROXY_ADDRESS=      # ETH Fee Proxy contract address on mainnet

### ONRAMP: MOONPAY
NEXT_PUBLIC_MOONPAY_KEY=
MOONPAY_SECRET_KEY=

### ONRAMP: COINBASE
NEXT_PUBLIC_COINBASE_APP_ID=
COINBASE_DEFAULT_ASSET=USDC
COINBASE_DEFAULT_FIAT=USD
COINBASE_DEFAULT_FIAT_AMOUNT=20
COINBASE_SESSION_TOKEN=     # optional if your app requires secure init

### PRIVY
NEXT_PUBLIC_PRIVY_APP_ID=
PRIVY_APP_SECRET=

### OPTIONAL INTEGRATIONS
NEXT_PUBLIC_GIPHY_API_KEY=
NEXT_PUBLIC_TENOR_API_KEY=
NEXT_PUBLIC_SERVICE_FEE_RECIPIENT_ADDRESS=