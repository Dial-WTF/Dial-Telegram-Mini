# Glyph Network Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# ERC20 Token Minting
# ============================================================================

# Private key of the wallet that deployed the GlyphToken contract
# This wallet has OWNER role and can mint tokens
# CRITICAL: Keep this secure! Never commit to git!
GLYPH_MINTER_PRIVATE_KEY=0xyour_private_key_here

# ============================================================================
# Telegram Bot
# ============================================================================

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# URL of your Glyph gateway
GLYPH_GATEWAY_URL=http://localhost:8080

# ============================================================================
# Signal Bot
# ============================================================================

# Your Signal phone number (with country code)
SIGNAL_NUMBER=+1234567890

# URL of signal-cli-rest-api instance
SIGNAL_API_URL=http://localhost:8080

# ============================================================================
# WhatsApp Bot
# ============================================================================

# URL of whatsapp-web.js API wrapper
WHATSAPP_API_URL=http://localhost:3000

# ============================================================================
# RPC Providers (Optional - defaults to public RPCs)
# ============================================================================

# Polygon
POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_MUMBAI_RPC=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# Base
BASE_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum
ARBITRUM_RPC=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_SEPOLIA_RPC=https://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Ethereum
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ============================================================================
# DHT (Optional - for decentralized receipt replication)
# ============================================================================

# Hivemind DHT bootstrap peer multiaddrs
# DHT_PEER=/ip4/203.0.113.1/tcp/31337/p2p/12D3KooW...
